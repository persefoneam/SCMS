@model IEnumerable<SCMS.DAL.Models.File>

<label class="alert-warning">
    @TempData["message"]
</label>
<p>
    @Html.ActionLink("Upload File", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Download", "DownloadFile", routeValues: new {path = item.Path }, htmlAttributes: null)
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UploadBy.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UploadDate)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
